rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Generic rule for all user-owned collections
    match /{collection}/{documentId} {
      allow create, read, update, delete: if request.auth != null && request.auth.uid == (resource.data.ownerUid ?? request.resource.data.ownerUid);
    }
  }
}