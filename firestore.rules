rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read, create, update, delete for authenticated users on their own user document
    match /users/{userId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read, create, update, delete for authenticated users on their own data in subcollections
    match /{collectionName}/{documentId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }

    // Special rule for budgetSettings as it's a single document per user
    match /budgetSettings/{documentId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }

    // Allow read for public data (if any, currently none explicitly defined)
    // match /publicData/{documentId} {
    //   allow read: if true;
    // }
  }
}