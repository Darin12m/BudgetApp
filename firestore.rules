rules_version = '2';
    service cloud.firestore {
      match /databases/{database}/documents {
        // Allow read/write for authenticated users on their own documents
        match /{collection}/{documentId} {
          allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerUid;
        }

        // You might want more specific rules for certain collections if needed,
        // but the general rule above should cover most user-owned data.
        // For example, if you had a public collection:
        // match /publicData/{documentId} {
        //   allow read: if true;
        //   allow write: if request.auth != null;
        // }
      }
    }