rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rule for 'transactions' collection
    match /transactions/{documentId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }

    // Rule for 'categories' collection
    match /categories/{documentId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }

    // Rule for 'accounts' collection
    match /accounts/{documentId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }

    // Rule for 'goals' collection
    match /goals/{documentId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }

    // Rule for 'recurringTransactions' collection
    match /recurringTransactions/{documentId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }

    // Rule for 'budgetSettings' collection
    match /budgetSettings/{documentId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }

    // Rule for 'investments' collection
    match /investments/{documentId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }
  }
}