rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write only if authenticated and ownerUid matches user's UID
    match /{collection}/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }

    // Special rule for budgetSettings as it's a single document per user
    match /budgetSettings/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }
  }
}