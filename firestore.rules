rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // General rule for user-owned collections
    match /{collection}/{documentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      // Explicitly allow create for any collection if ownerUid matches
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid;
    }

    // You can add more specific rules for certain collections if needed,
    // but the general rule above should now cover creation correctly.
  }
}