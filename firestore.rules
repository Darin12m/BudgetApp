rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for authenticated users to their own data
    match /{collection}/{document} {
      allow read, write: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;
    }

    // Specific rules for collections if needed, otherwise the general rule above applies.
    // For example, if you wanted to make a collection publicly readable:
    // match /publicCollection/{document} {
    //   allow read: if true;
    //   allow write: if request.auth != null && resource.data.ownerUid == request.auth.uid;
    // }

    // Example for 'transactions' collection
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;
    }

    // Example for 'categories' collection
