      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;
    }

    // Example for 'recurringTransactions' collection
    match /recurringTransactions/{recurringTransactionId} {
      allow read, write: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;
    }

    // Example for 'investments' collection
    match /investments/{investmentId} {
      allow read, write: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;
    }

    // Example for 'budgetSettings' collection
    match /budgetSettings/{budgetSettingsId} {
      allow read, write: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;
    }
  }
}